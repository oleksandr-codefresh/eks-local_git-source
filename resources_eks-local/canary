  project: default
  source:
    path: canary-rollout
    repoURL: https://github.com/testcodefresh/argocd-example-apps
    targetRevision: test-alex
  destination:
    name: alina
    namespace: test-ns
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - ServerSideApply=true
      - PrunePropagationPolicy=foreground
      - Replace=false
      - PruneLast=false
      - Validate=true
      - CreateNamespace=true
      - ApplyOutOfSyncOnly=false
